<div class="tab-pane {% if hookable_metadata.configuration.active|default(false) %}show active{% endif %}" id="brand" role="tabpanel" tabindex="0">
    <div class="card mb-3">
        <div class="card-header">
            <h2 class="card-title">
                {{ 'acseo.brand.ui.brand'|trans }}
            </h2>
        </div>
        <div class="card-body">
            <div class="row">
                {% set brand = hookable_metadata.context.form.brand %}
                <div class="mb-3">
                    {{ form_row(brand) }}
                </div>
            </div>
        </div>
    </div>
</div>
